@using WebCMSTraining.Models.DB;
@model Category;
@{
    Layout = "_AdminLayout";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/datatable/assets/css/bootstrap.css">

    <link rel="stylesheet" href="~/datatable/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/datatable/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/datatable/assets/css/app.css">
    <link rel="shortcut icon" href="~/datatable/assets/images/favicon.svg" type="image/x-icon">
</head>
<body>
    <section id="">
        <div class="row match-height">
            <div class="col-md-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <center><h4>Form Add Category</h4></center>
                    </div>
                    <form asp-action="UpdateCategory" method="POST">
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="Id" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Category Name</label>  @*Cukup pakai asp-for untuk edit karna sudah auto Binding*@
                                        <input type="text" asp-for="CategoryName" class="form-control" />
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select asp-for="Status" class="form-control">
                                            <option value="Published">Published</option>
                                            <option value="Unpublished">Unpublished</option>
                                        </select>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Save Update Data</button>
                                        <a href="@Url.Action("Index","Category")" class="btn btn-info me-1 mb-1">Cancel</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="~/datatable/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/datatable/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/datatable/assets/js/main.js"></script>
</body>
</html>



